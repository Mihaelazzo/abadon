---
import Header from "../components/Header.astro";
import Authors from "../components/Authors.astro";
import Footer from "../components/Footer.astro";

import { Image } from "astro:assets";

type BookMeta = {
  key: string;
  value: string;
};

type Chunk = {
  book_meta_group: [];
  book_meta: {
    book_meta_group: BookMeta[];
  };
};

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={frontmatter.meta_description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.meta_title}</title>
  </head>
  <body class="bg-neutral-900 text-white">
    <!-- <Header image={frontmatter.header_image} alt={frontmatter.header_image.alt} /> -->
    <Image src={frontmatter.hero_image.image} alt={frontmatter.hero_image.alt} loading="eager" width={171} height={35} />
    <div class="cover">
      <Image src={frontmatter.book_image.image} alt={frontmatter.book_image.alt} loading="eager" width={588} height={808} />
      <p>{frontmatter.book_preview.text}</p>
      <a href={frontmatter.book_preview.link} target="_blank">
        <Image src={frontmatter.book_preview.widget} alt={frontmatter.book_preview.alt} loading="eager" width={36} height={41} />
      </a>
    </div>
    {
      frontmatter.book_meta.map((chunk: Chunk) => (
        <div class="p-8">
          {chunk.book_meta_group.map((i: BookMeta) => (
            <div class="p-2">
              <p>{i.key}</p>
              <p>{i.value}</p>
            </div>
          ))}
        </div>
      ))
    }
    <div class="slot">
      <slot />
    </div>
    <!-- <Authors authors={frontmatter.authors} /> -->
    <!-- <Footer footer={frontmatter.footer} /> -->
  </body>
</html>
