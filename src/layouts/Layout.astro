---
import Header from "../components/Header.astro";
import Authors from "../components/Authors.astro";
import Footer from "../components/Footer.astro";

type BookMeta = {
  key: string;
  value: string;
};

type Chunk = {
  book_meta_group: [];
  book_meta: {
    book_meta_group: BookMeta[];
  };
};

const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={frontmatter.meta_description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{frontmatter.meta_title}</title>
  </head>
  <body>
    <!-- <Header image={frontmatter.header_image} alt={frontmatter.header_image.alt} /> -->
    {
      frontmatter.book_meta.map((chunk: Chunk) => (
        <div class="p-8">
          {chunk.book_meta_group.map((i: BookMeta) => (
            <div class="p-2">
              <p>{i.key}</p>
              <p>{i.value}</p>
            </div>
          ))}
        </div>
      ))
    }
    <slot />
    <!-- <Authors authors={frontmatter.authors} /> -->
    <!-- <Footer footer={frontmatter.footer} /> -->
  </body>
  <style is:global></style>
</html>
