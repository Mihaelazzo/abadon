---
type Footer = {
  footer_item: {
    key: string;
    value: string;
    link: string;
  };
};

const { footer } = Astro.props;
---

<section class="px-6 py-4">
  <div class="container mx-auto max-w-screen-xl">
    {
      footer.map((i: Footer) => (
        <div class="flex gap-4">
          <p class="text-end basis-1/3 sm:basis-1/5 lg:basis-1/12">{i.footer_item.key}</p>
          <a class="hover:text-neutral-400 transition-all duration-300 ease-in-out" href={i.footer_item.link}>
            {i.footer_item.value}
          </a>
        </div>
      ))
    }
  </div>
</section>
